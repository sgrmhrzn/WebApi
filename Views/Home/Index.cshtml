@{
    ViewBag.Title = "Home Page";
}
<section style="margin-top:20px" ng-controller="myCntrl">
    <h1 class="modal-header">Person Details</h1>
    <h1></h1>
    <div class="form-group">
        <input type="text" class="form-control col-md-3" ng-model="search" />
        <input type="button" class="btn btn-info" value="Search" ng-click="AddUpdateDiv()" />
        <input type="button" class="btn btn-success pull-right" value="Add Employee" ng-click="AddUpdateDiv()" />
    </div>

    <div class="divList">
        <table class="table table-hover">
            <tr>
                <td><b>ID</b></td>
                <td><b>Name</b></td>
                <td><b>Profession</b></td>
                <td><b>Phone No</b></td>
                <td><b>Mobile No</b></td>
                <td><b>Email</b></td>
                <td><b>Address</b></td>
                <td><b>Action</b></td>


            </tr>
            <tr ng-repeat="person in personDetails | filter: search">
                <td>
                    {{person.person_id}}
                </td>
                <td>
                    {{person.name}}
                </td>
                <td>
                    {{person.profession}}
                </td>
                <td>
                    {{person.contact_detail.mobile_no}}
                </td>
                <td>
                    {{person.contact_detail.phone_no}}
                </td>
                <td>
                    {{person.contact_detail.email}}
                </td>
                <td>
                    {{person.contact_detail.address}}
                </td>
                <td>
                    <input type="button" class="btn btn-primary" value="Edit" ng-click="editRecord(person)">
                    <input type="button" class="btn btn-danger" value="Delete" ng-click="delete(person)">
                </td>
            </tr>
        </table>
    </div>
    <div ng-show="divAddUpdate" class="addUpdateDiv">
        <h1 class="modal-header">{{Action}} Person</h1>
        <table>
            <tr>
                <td><b>Id</b></td>
                <td>
                    <input type="text" disabled="disabled" ng-model="person_id" />
                </td>
            </tr>
            <tr>
                <td><b>Name</b></td>
                <td>
                    <input type="text" ng-model="name" />
                </td>
            </tr>
            <tr>
                <td><b>Profession</b></td>
                <td>
                    <input type="text" ng-model="profession" />
                </td>
            </tr>
            <tr>
                <td><b>Phone no</b></td>
                <td>
                    <input type="text" ng-model="phone_no" />
                </td>
            </tr>
            <tr>
                <td><b>Mobile no</b></td>
                <td>
                    <input type="text" ng-model="mobile_no" />
                </td>

            </tr>
            <tr>
                <td><b>Email</b></td>
                <td>
                    <input type="text" ng-model="email" />
                </td>

            </tr>
            <tr>
                <td><b>Address</b></td>
                <td>
                    <input type="text" ng-model="address" />
                </td>

            </tr>
            <tr>
                <td colspan="2">
                    <input type="button" class="btn btn-success" value="Save" ng-click="AddUpdate()" />
                    <input type="button" class="btn btn-primary" value="Cancel" ng-click="cancel()" />
                </td>
            </tr>
        </table>
    </div>
</section>